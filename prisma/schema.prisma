generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String?
  googleId  String?  @unique
  createdAt DateTime @default(now())
  blogs     Blog[]
}

model Blog {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  excerpt   String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
